<Window x:Class="Chisel.Samples.ContinuousLineSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Chisel="clr-namespace:Chisel;assembly=Chisel"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <TextBlock DockPanel.Dock="Top" Text="CPU %" FontSize="17" Margin="5" />
            <Chisel:LineChart Margin="5" x:Name="Chart" Background="White" />
        </DockPanel>
    </Grid>
</Window>
